{{#with rowModel}}
    <tr name="{{module}}_{{attributes.id}}" class="single">
        {{#each ../leftColumns}}
            <td>
                {{field ../../this model=../this template=../../viewName}}
            </td>
        {{/each}}
        {{#each ../_fields.visible}}
            <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}">
                {{field ../../this model=../this template=../../viewName}}
            </td>
        {{/each}}
        {{#each ../rightColumns}}
            <td>
                {{field ../../this model=../this template=../../viewName}}
            </td>
        {{/each}}
    </tr>
{{/with}}

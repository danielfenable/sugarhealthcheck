{{#if data.records}}
    {{#each data.records}}
    <li>
        <a href="{{link}}">
            <span class="label label-module label-module-mini label-{{module}}" title="{{getModuleName module plural=true}}">{{moduleIconLabel module}}</span> {{name}}{{#if field_name}}, {{field_name}}: {{field_value}}{{/if}}
        </a>
    </li>
    {{/each}}
    {{#notEq data.next_offset "-1"}}
        <li>
            <a href="#bwc/index.php?module=Home&append_wildcard=true&action=spot&full=true&q={{term}}&m={{data.module_list}}">{{str "LNK_SEARCH_FTS_VIEW_ALL"}}</a>
        </li>
    {{/notEq}}
{{else}}
    <li class="no-results">
    {{str "LNK_SEARCH_NO_RESULTS"}}
    </li>
{{/if}}

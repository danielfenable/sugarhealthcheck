<div class="btn-toolbar pull-right">
{{#each meta.buttons}}
    {{#if type}}
        {{field ../../this model=../../this.model}}
    {{else}}
        {{#if dropdown_buttons}}
        <div class="btn-group">
            <a data-toggle="dropdown" rel="tooltip" title="{{str "LBL_DASHLET_CONFIGURE"}}" class="dropdown-toggle btn btn-invisible" data-placement="bottom"><i data-action="loading" class="fa fa-cog" track="click:dashletToolbarCog"></i></a>
            <ul class="dropdown-menu left">
                <div>
                    {{#each dropdown_buttons}}
                        <li>{{field ../../../../this model=../../../../this.model}}</li>
                    {{/each}}
                </div>
            </ul>
        </div>
        {{/if}}
    {{/if}}
{{/each}}
</div>
<h4 data-toggle="dashlet" class="dashlet-title">{{meta.label}}</h4>
